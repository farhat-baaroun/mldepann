---
const phoneNumber = '06 89 08 76 23'
const phoneLink = 'tel:+33689087623'

const links = [
  { label: 'Accueil', id: 'hero' },
  { label: 'Services', id: 'services' },
  { label: 'À Propos', id: 'about' },
  { label: 'Contact', id: 'contact' },
]
---

<footer class="bg-brand-blue text-white py-12">
  <div class="container mx-auto px-4 md:px-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 mb-10">
      <!-- Logo & Description -->
      <div>
        <div class="text-2xl font-bold mb-4">mldepann</div>
        <p class="text-white/70 text-sm leading-relaxed">
          Service professionnel de dépannage et remorquage en Île-de-France. 
          Intervention rapide 24h/24 et 7j/7.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4">Liens Rapides</h4>
        <ul class="space-y-2">
          {links.map((link) => (
            <li>
              <a
                href={`#${link.id}`}
                class="text-white/70 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold mb-4">Contact</h4>
        <ul class="space-y-3">
          <li>
            <a
              href={phoneLink}
              class="flex items-center gap-2 text-white/70 hover:text-white transition-colors text-sm"
              aria-label="Appeler le 06 89 08 76 23"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {phoneNumber}
            </a>
          </li>
          <li>
            <a
              href="mailto:contact@mldepann.fr"
              class="flex items-center gap-2 text-white/70 hover:text-white transition-colors text-sm"
              aria-label="Envoyer un email"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              contact@mldepann.fr
            </a>
          </li>
          <li class="flex items-center gap-2 text-white/70 text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            123 Avenue de Paris, 75001 Paris
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-white/10 pt-6 text-center">
      <p class="text-white/50 text-sm">
        © 2024 mldepann. Tous droits réservés.
      </p>
    </div>
  </div>
</footer>

