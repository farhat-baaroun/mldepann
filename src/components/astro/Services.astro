---
import { Image } from 'astro:assets';
import serviceDepannage from '../../assets/images/webp/service-depannage.webp';
import serviceBatterie from '../../assets/images/webp/service-batterie.webp';
import heroTowTruck from '../../assets/images/webp/hero-tow-truck.webp';
import serviceRoue from '../../assets/images/webp/service-roue.webp';
import servicePlaques from '../../assets/images/webp/service-plaques.webp';

const phoneLink = 'tel:+33689087623'

const services = [
  {
    title: 'Dépannage sur route',
    description: 'Intervention rapide sur place pour vous remettre en route.',
    image: serviceDepannage,
    width: 600,
    height: 450,
  },
  {
    title: 'Problème de batterie',
    description: 'Démarrage et remplacement de batterie sur site.',
    image: serviceBatterie,
    width: 600,
    height: 450,
  },
  {
    title: 'Remorquage',
    description: 'Transport sécurisé de votre véhicule vers le garage.',
    image: heroTowTruck,
    width: 600,
    height: 450,
  },
  {
    title: 'Changement de roue',
    description: 'Remplacement rapide et professionnel de vos pneus.',
    image: serviceRoue,
    width: 600,
    height: 450,
  },
  {
    title: 'Changement de plaques',
    description: 'Installation conforme et rapide de vos plaques d\'immatriculation.',
    image: servicePlaques,
    width: 600,
    height: 450,
  },
]
---

<section id="services" class="py-20 md:py-28 bg-brand-gray-light">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center mb-14">
      <h2 class="text-3xl md:text-4xl font-bold text-brand-blue mb-4">
        Nos Services
      </h2>
      <p class="text-brand-gray max-w-2xl mx-auto">
        Des solutions rapides et professionnelles pour tous vos besoins
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {services.map((service) => (
        <div class="card group">
          <div class="relative h-48 overflow-hidden" >
            <Image
              src={service.image}
              alt={service.title}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              width={service.width}
              height={service.height}
              loading="lazy"
              format="webp"
              quality={85}
              decoding="async"
              sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent" />
            <div class="absolute bottom-4 left-4 w-12 h-12 rounded-full bg-white/90 flex items-center justify-center">
              <svg class="w-6 h-6 text-brand-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-brand-blue mb-2">
              {service.title}
            </h3>
            <p class="text-brand-gray/70 text-sm mb-4">
              {service.description}
            </p>
            <a
              href={phoneLink}
              class="inline-flex items-center gap-2 text-brand-orange-dark font-semibold text-sm hover:gap-3 transition-all"
              aria-label={`Appeler pour ${service.title}`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Appeler
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

