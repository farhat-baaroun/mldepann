---
import { Image } from 'astro:assets';
import CTAButtons from '../react/CTAButtons';
import emergencyBg from '../../assets/images/webp/emergency-cta-bg.webp';
---

<section class="relative py-20 md:py-28 overflow-hidden">
  <div class="absolute inset-0" >
    <Image
      src={emergencyBg}
      alt="Urgence dépannage"
      class="w-full h-full object-cover"
      width={1200}
      height={400}
      loading="lazy"
      format="webp"
      quality={85}
      decoding="async"
      sizes="100vw"
    />
    <div class="absolute inset-0 bg-brand-blue/85" />
  </div>

  <div class="relative z-10 container mx-auto px-4 md:px-6 text-center">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
      Une urgence ? N'attendez pas.
    </h2>
    <p class="text-lg md:text-xl text-white/80 mb-8">
      Appelez maintenant – intervention immédiate
    </p>

    <CTAButtons client:visible variant="cta" showLocationInfo={true} />
  </div>
</section>

