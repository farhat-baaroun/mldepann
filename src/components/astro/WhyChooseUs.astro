---
const features = [
  {
    title: 'Dépanneurs professionnels',
    description: 'Équipe qualifiée et expérimentée',
  },
  {
    title: 'Prix raisonnables',
    description: 'Tarifs transparents sans surprise',
  },
  {
    title: 'Rapidité d\'intervention',
    description: '15 minutes en moyenne',
  },
  {
    title: 'Serviabilité & respect',
    description: 'Service courtois et attentif',
  },
]
---

<section class="py-20 md:py-28 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center mb-14">
      <h2 class="text-3xl md:text-4xl font-bold text-brand-blue mb-4">
        Pourquoi Nous Choisir ?
      </h2>
      <p class="text-brand-gray max-w-2xl mx-auto">
        Votre satisfaction est notre priorité
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
      {features.map((feature) => (
        <div class="text-center p-6 md:p-8 rounded-2xl bg-brand-gray-light hover:bg-white hover:shadow-lg transition-all duration-300">
          <div class="w-16 h-16 rounded-full bg-brand-blue flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-brand-blue mb-2">
            {feature.title}
          </h3>
          <p class="text-brand-gray/70 text-sm">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

