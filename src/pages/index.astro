---
import Layout from '../layouts/Layout.astro';
import Header from '../components/react/Header';
import Hero from '../components/astro/Hero.astro';
import Services from '../components/astro/Services.astro';
import EmergencyCTA from '../components/astro/EmergencyCTA.astro';
import WhyChooseUs from '../components/astro/WhyChooseUs.astro';
import About from '../components/astro/About.astro';
import FinalCTA from '../components/astro/FinalCTA.astro';
import Contact from '../components/astro/Contact.astro';
import Footer from '../components/astro/Footer.astro';
---

<Layout>
  <div class="min-h-screen bg-white">
    <!-- Header loads after idle to not block LCP -->
    <Header client:only="react" />
    
    <main>
      <!-- Hero renders immediately (Astro static) - this is the LCP element -->
      <Hero />
      <Services />
      <EmergencyCTA />
      <WhyChooseUs />
      <About />
      <FinalCTA />
      <Contact />
    </main>
    
    <Footer />
  </div>
</Layout>

